<UserControl x:Class="Trivia_Client.Pages.Options.PersonalStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Personal Status" Style="{StaticResource Heading2}" TextAlignment="Center"/>
                <TextBlock Text="Your Personal Status In Our Game" TextAlignment="Center"/>
                <TextBlock Text="" TextAlignment="Center" x:Name="NumberofGames" Margin="0, 10, 0, 0"/>
                <TextBlock Text="" TextAlignment="Center" x:Name="NumberofCorrectAnswers" Margin="0, 10, 0, 0"/>
                <TextBlock Text="" TextAlignment="Center" x:Name="NumberofWrongAnswers" Margin="0, 10, 0, 0"/>
                <TextBlock Text="" TextAlignment="Center" x:Name="AverageAnswerTime" Margin="0, 10, 0, 0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
