<UserControl x:Class="Trivia_Client.Pages.Options.BestScores"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Best Scores" Style="{StaticResource Heading2}" TextAlignment="Center"/>
                <TextBlock Text="The Best Scores Until Now" TextAlignment="Center"/>
                <TextBlock x:Name="FirstScore" TextAlignment="Center" Margin="0, 10, 0, 0"></TextBlock>
                <TextBlock x:Name="SecondScore" TextAlignment="Center" Margin="0, 10, 0, 0"></TextBlock>
                <TextBlock x:Name="ThirdScore" TextAlignment="Center" Margin="0, 10, 0, 0"></TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
