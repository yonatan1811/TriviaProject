<UserControl x:Class="Trivia_Client.Pages.Options.Game"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="" x:Name="Title" Style="{StaticResource Heading2}" TextAlignment="Center" />
                <TextBlock Text="" x:Name="Question" TextAlignment="Center" />
                <Button Content="" x:Name="Answer1" Width="201" Margin="0, 20, 0, 0" Click="Answer1_Click"/>
                <Button Content="" x:Name="Answer2" Width="201" Margin="0, 12, 0, 0" Click="Answer2_Click"/>
                <Button Content="" x:Name="Answer3" Width="201" Margin="0, 12, 0, 0" Click="Answer3_Click"/>
                <Button Content="" x:Name="Answer4" Width="200" Margin="0, 12, 0, 0" Click="Answer4_Click"/>

                <TextBlock Text="30" x:Name="Clock" Margin="0, 20, 0, 0" TextAlignment="Center" Height="17"></TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
