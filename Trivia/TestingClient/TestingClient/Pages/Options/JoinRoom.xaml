<UserControl x:Class="Trivia_Client.Pages.Options.JoinRoom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Join Room" TextAlignment="Center" Style="{StaticResource Heading2}" />
                <TextBlock Text="Join A Room To Start Playing Trivia" TextAlignment="Center" />
                <ListView x:Name="Rooms" Margin="20, 20, 20, 0" MinHeight="150">
       
                </ListView>
                <Button x:Name="JoinRoomButton" Margin="100, 15, 100, 0" MinHeight="30" Width="60" Content="Join" Click="JoinRoomButton_Click"></Button>
                <TextBlock x:Name="ErroMessages" Margin="0, 10, 0, 0" TextAlignment="Center"></TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
