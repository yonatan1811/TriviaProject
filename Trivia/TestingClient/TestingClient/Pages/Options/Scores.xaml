<UserControl x:Class="Trivia_Client.Pages.Options.Scores"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Game Scores" Style="{StaticResource Heading2}" TextAlignment="Center"/>
                <TextBlock Text="All Users Game Scores" TextAlignment="Center" />
                <ListView x:Name="UIScores" Margin="0, 10, 0, 0" Height="110">
                    
                </ListView>
                <Button Content="Exit" Margin="0, 20, 0 ,0" Width="80" Click="Button_Click"></Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
