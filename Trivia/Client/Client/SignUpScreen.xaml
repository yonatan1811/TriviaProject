<Window x:Class="Client.SignUpScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="SignUpScreen" Height="450" Width="800" Background="Beige">

    <Border Background="black" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Button Content="Home" Width="100" Margin="0 , 0 , 620 , 0" Background="Chocolate" Foreground="AntiqueWhite" Click="Home_Click"/>
            <Label Content="Signup" Foreground="white" FontSize="25" HorizontalAlignment="Center">
            </Label>
            <Separator></Separator>
            <Label Content="Username" Foreground="white" FontSize="18" ></Label>
            <TextBox Name="txtUserName" Background="#545d6a" Foreground="White" FontSize="18"></TextBox>
            <Label Content="Password" Foreground="white" FontSize="18" ></Label>
            <TextBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"></TextBox>
            <Button Name="btnLogin" Content="SignUp" Margin="60 100" Background="#545d6a" Foreground="NavajoWhite" Height="50" Click="SendSignUpBtn"></Button>
        </StackPanel>
        
    </Border>
</Window>
